@model cda_ecf_asp_net.Models.EventRegistrationViewModel

@{
    ViewBag.Title = "S'inscrire à l'événement";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@if (Model.Event != null)
{
    <h3>Événement: @Model.Event.Title</h3>
    <p><strong>Description:</strong> @Model.Event.Description</p>
    <p><strong>Lieu:</strong> @Model.Event.Location</p>
    <p><strong>Date:</strong> @Model.Event.StartDate.ToString("g") - @Model.Event.EndDate.ToString("g")</p>
}

<form asp-action="Register" method="post">
    <input type="hidden" asp-for="Event.Id" />
    <input type="hidden" asp-for="Event.Title" />
    <input type="hidden" asp-for="Event.Description" />
    <input type="hidden" asp-for="Event.Location" />

    <div class="form-group">
        <label asp-for="Participant.FirstName" class="control-label">Prénom</label>
        <input asp-for="Participant.FirstName" class="form-control" />
        <span asp-validation-for="Participant.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Participant.LastName" class="control-label">Nom</label>
        <input asp-for="Participant.LastName" class="form-control" />
        <span asp-validation-for="Participant.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Participant.Email" class="control-label">Email</label>
        <input asp-for="Participant.Email" type="email" class="form-control" />
        <span asp-validation-for="Participant.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Participant.PhoneNumber" class="control-label">Téléphone</label>
        <input asp-for="Participant.PhoneNumber" class="form-control" />
        <span asp-validation-for="Participant.PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">S'inscrire</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
